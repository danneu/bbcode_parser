<form action="/" method="get">
  <textarea rows=10 name="bbcode" placeholder="Insert BBCode"><%= @bbcode %></textarea>
  <input type="submit" value="Convert to HTML" />
</form>

<table id="cheatsheet" cellspacing=10>
  <caption>BBCode Cheatsheet</caption>
  <colgroup>
    <col style="width: 10%">
    <col style="width: 10%">
    <col style="width: 10%">
    <col style="width: 70%">
  </colgroup>
  <tr class="headers">
    <th>BBCode</th>
    <th>Description</th>
    <th>HTML</th>
    <th>Output</th>
  </tr>
  
    <!-- [b] -->
    <tr>
      <td><pre>[b]bold text[/b]</pre></td>
      <td>Embolden</td>
      <td><pre><%=h "<strong>bold text</text>" %></pre></td>
      <td><strong>bold text</strong></td>
    </tr>

    <!-- [i] -->
    <tr>
      <td><pre>[i]italicized text[/i]</pre></td>
      <td>Italicize</td>
      <td><pre><%=h "<em>italicized text</em>" %></pre></td>
      <td><em>italicized text</em></td>
    </tr>

    <!-- [u] -->
    <tr>
      <td><pre>[u]underlined text[/u]</pre></td>
      <td>Underline</td>
      <td><pre><%=h "<span class='underline'>underlined text</span>" %></pre></td>
      <td class="rendered">
        <span class='underline'>underlined text</span>
      </td>
    </tr>

    <tr>
      <td><pre>[quote]text[/quote]</pre></td>
      <td>Quote</td>
      <td><pre>
          <%=h %{ 
<div class="quote">
  <div class="quote-original-poster">
    Quote:
  </div>
  <div class="quote-text">
    text
  </div>
</div>
          } %>
      </pre></td>
      <td class="rendered">
        <div class="quote">
          <div class="quote-original-poster">
            Quote:
          </div>
          <div class="quote-text">
            text
          </div>
        </div>
      </td>
    </tr>
</table>
<ul>
  <li>[quote][/quote]: Quote</li>
  <li>[quote=User Name]: Quote with reference to quoted username</li>
  <li>[quote=User Name;92384]: Quote with reference to quoted username and post ID</li>
</ul>

